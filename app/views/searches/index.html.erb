<h1>Search your article</h1>
<%= form_with(url: searches_path, method: :get, data: { controller: "search", turbo_frame: "analytics", turbo_action: "advance" }) do |form| %>
  <div class="my-5">
    <%= form.label :term %>
    <%= form.text_field :term,
                        value: params[:term], autocomplete: "off",
                        placeholder: 'What can we help you with?', data: { action: "input->search#search" } %>
  </div>
<% end %>

<%= render "searches", searches: @searches, term: params[:term] %>